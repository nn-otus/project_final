vrrp_instance VI_BLNC {
    state {{ 'MASTER' if inventory_hostname == keepalived_master_node else 'BACKUP' }}
    interface {{ keepalived_interface }}
    virtual_router_id {{ keepalived_router_id }}
    priority {{ keepalived_priority_master if inventory_hostname == keepalived_master_node else keepalived_priority_backup }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_auth_pass }}
    }
    virtual_ipaddress {
        {{ keepalived_vip }}
    }
}
